#!/usr/bin/env bash
# Build script for netcalc across multiple platforms
# Make executable: chmod +x build.sh
set -euo pipefail

# Create output directories
mkdir -p bin/windows
mkdir -p bin/linux
mkdir -p bin/mac_intel
mkdir -p bin/mac_apple_silicon

echo "ðŸ”¨ Building netcalc for Windows (amd64)..."
GOOS=windows GOARCH=amd64 go build -o bin/windows/netcalc.exe netcalc.go

echo "ðŸ”¨ Building netcalc for Linux (amd64)..."
GOOS=linux GOARCH=amd64 go build -o bin/linux/netcalc_linuxamd64 netcalc.go

echo "ðŸ”¨ Building netcalc for macOS Intel (amd64)..."
GOOS=darwin GOARCH=amd64 go build -o bin/mac_intel/netcalc_macamd64 netcalc.go

echo "ðŸ”¨ Building netcalc for macOS Apple Silicon (arm64)..."
GOOS=darwin GOARCH=arm64 go build -o bin/mac_apple_silicon/netcalcarm64 netcalc.go

echo "âœ… All builds completed successfully!"
